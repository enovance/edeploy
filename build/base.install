dir="$1"
dist="$2"
version="$3"

ROLE=base

ORIG=$(cd $(dirname $0); pwd)

. common

fatal_error() {
	echo $1;
	exit 1
}

check_binary() {
	type -p $1 || fatal_error "$1 is missing"
}

if [ -z "$1" -o -z "$dist" -o -z "$version" ]; then
   echo "Usage: $0 <directory name> <distro name>" 1>&2
   exit 1
fi

check_binary dh_testdir
check_binary alien
check_binary wget
check_binary debootstrap
check_binary chroot
check_binary sed

uname -m | grep -q 'i[3-6]86'
if [ $? -eq 0 ]; then
    echo "eDeploy is not supported on 32bit OS"
    echo "Exiting"
    exit 1
fi


set -e				# abort on failure
set -x				# print commands

case $dist in
    centos*)
	DEB=
	;;
    *)
	DEB=1
esac

if [ ! -d "$dir" ]; then
    mkdir -p "$dir"

    if [ -n "$DEB" ]; then
	debootstrap --arch ${ARCH:=amd64} --variant=minbase $dist "$dir"

	# workaround no signature downloaded
	rm -f "$dir"/var/lib/apt/lists/*[es]
	chroot "$dir" apt-get update
    else
	mkdir -p "$dir/dev" "$dir/proc"
    fi
fi

if [ -n "$DEB" ] ;then
    cp -p ${ORIG}/policy-rc.d ${dir}/usr/sbin/

    cat >> "$dir/etc/apt/apt.conf" <<EOF
APT::Install-Recommends "0" ;
APT::Install-Suggests "0" ;
EOF
fi

cleanup() {
    rc=$?
    umount ${dir}/dev
    umount ${dir}/proc
    if [ $rc = 0 ]; then
	cd ${dir}
	tar c . | compress -9v > ../../${ROLE}-${version}.edeploy
    fi
}

trap cleanup 0

mount -obind /dev ${dir}/dev
mount -obind /proc ${dir}/proc

if [ -z "$DEB" ]; then
    rpm -ivh --root "$dir" "http://mirror.centos.org/centos/6.4/os/x86_64/Packages/centos-release-6-4.el6.centos.10.x86_64.rpm"
    sed -i 's/$releasever/6/g' ${dir}/etc/yum.repos.d/* 
    cp -f /etc/resolv.conf "$dir/etc/"
    yum --installroot "$dir" -y --nogpgcheck install yum
    chroot "$dir" yum --nogpgcheck install -y yum basesystem
    cp ${dir}/etc/skel/.bashrc ${dir}/root
    cp ${dir}/etc/skel/.bash_profile ${dir}/root
fi

PACKAGES="pciutils rsyslog infiniband-diags"

case $dist in
    precise)
	PACKAGES="$PACKAGES linux-image-generic-lts-raring linux-headers-generic-lts-raring iputils-ping linux-firmware"
	cat > ${dir}/etc/apt/sources.list << EOF
deb http://archive.ubuntu.com/ubuntu precise main
deb http://archive.ubuntu.com/ubuntu precise-updates main
deb http://archive.ubuntu.com/ubuntu precise universe
deb http://archive.ubuntu.com/ubuntu precise-updates universe
EOF
	;;
    wheezy)
	PACKAGES="$PACKAGES linux-image-amd64 ipmitool sdparm htop acpi-support-base inetutils-ping firmware-bnx2"
	cat > ${dir}/etc/apt/sources.list.d/nonfree.list <<EOF
deb http://ftp.debian.org/debian/ wheezy non-free
EOF
        cat > ${dir}/etc/apt/sources.list.d/updates.list <<EOF
deb http://security.debian.org/ wheezy/updates main
deb http://ftp.debian.org/debian/ wheezy-updates main
EOF
	;;
    centos*)
	PACKAGES="$PACKAGES passwd kernel sdparm"
	;;
    *)
	echo "unsupported distribution: $dist" 2>&1
	exit 1
	;;
esac

mkdir -p "${dir}"/etc/default/grub.d
echo 'exit 0' > "${dir}"/etc/default/grub.d/edeploy.cfg

export DEBIAN_FRONTEND=noninteractive

# Resolv.conf got setup during the initial deboostrap
# But since, you might have change your host to another network (office vs home vs mobile vs ...)
# In such case, the resolv.conf is wrong and prevents apt (and all networking-depedent stuff from working)
# So let's copy the current one to insure the setup is good
cp -f /etc/resolv.conf "$dir/etc/"

if [ -n "$DEB" ]; then
chroot "$dir" apt-get update
chroot "$dir" apt-get dist-upgrade -y

chroot "$dir" apt-get install -y --force-yes openssh-server parted $PACKAGES net-tools isc-dhcp-client grub-pc kbd rsync ifupdown lshw netbase dmidecode bash curl hdparm xfsprogs acpid ifenslave kexec-tools
else
    chroot "$dir" yum --nogpgcheck install -y openssh-server parted coreutils perl $PACKAGES e2fsprogs net-tools initscripts upstart vconfig dhclient grub grubby kbd rsync ifupdown dmidecode bash curl hdparm xfsprogs acpid
    # bring lshw from epel
    chroot "$dir" rpm -ivh "https://dl.fedoraproject.org/pub/epel/6/x86_64/lshw-B.02.14-3.el6.x86_64.rpm"
fi

rm -f "${dir}"/etc/default/grub.d/edeploy.cfg

# Inject HP RAID CLI tool
if [ ! -r hpacucli-9.40-12.0.x86_64.rpm ]; then
    wget http://downloads.linux.hp.com/SDR/downloads/ServicePackforProLiant/2013.02.0/hp/swpackages/hpacucli-9.40-12.0.x86_64.rpm
fi

if [ -n "$DEB" ]; then
    if [ ! -r hpacucli_9.40-13_amd64.deb  ]; then
	alien hpacucli-9.40-12.0.x86_64.rpm
    fi
    cp hpacucli_9.40-13_amd64.deb "$dir"/tmp/hpacucli.deb
    chroot "$dir" apt-get -y install lib32gcc1 lib32stdc++6 python-pexpect lvm2 vim-tiny bsdmainutils
    chroot "$dir" dpkg -i /tmp/hpacucli.deb
    rm "$dir"/tmp/hpacucli.deb

    chroot "$dir" apt-get clean
else
    chroot "$dir" yum --nogpgcheck install -y pexpect
    cp hpacucli-9.40-12.0.x86_64.rpm $dir/tmp
    chroot $dir rpm -ivh /tmp/hpacucli-9.40-12.0.x86_64.rpm
    rm -f $dir/tmp/hpacucli-9.40-12.0.x86_64.rpm
fi

# Ubuntu specific
if [ $dist = precise ]; then
    sed -i 's/#GRUB_TERMINAL=console/GRUB_TERMINAL=console/' ${dir}/etc/default/grub
    sed -i 's/GRUB_CMDLINE_LINUX_DEFAULT=.*/GRUB_CMDLINE_LINUX_DEFAULT=/' ${dir}/etc/default/grub
fi

if [ -z "$DEB" ]; then
    rm -rf "$dir/var/cache/yum"
fi

# Infinband packages
if [ $ENABLE_IB = "y" ]; then
  bash ${ORIG}/infiniband ${dir}
fi

# let the key be generated on first boot
rm -f "$dir"/etc/ssh/*key*

rm -f ${dir}/var/tmp/* ${dir}/tmp/*

echo -e "root\nroot"|chroot "$dir" passwd

mkdir -p "$dir/var/lib/edeploy/${version}"
cp -p ${ORIG}/edeploy ${dir}/usr/sbin/

echo -e "\nVersion ${version}\n" > ${dir}/etc/motd
echo -e "VERS=${version}\nROLE=${ROLE}\n" > ${dir}/var/lib/edeploy/conf
cp ${ORIG}/base.exclude "$dir/var/lib/edeploy/${version}/exclude"

[ -f ${dir}/etc/rc.local.REAL ] || cp -p ${dir}/etc/rc.local ${dir}/etc/rc.local.REAL

cat > ${dir}/etc/rc.local <<EOF
#!/bin/bash

set -e

mv /etc/rc.local.REAL /etc/rc.local

touch /var/log/first-boot.d.log
chmod 0600 /var/log/first-boot.d.log

echo -n "Running first boot scripts..."
run-parts /etc/first-boot.d >> /var/log/first-boot.d.log 2>&1
echo done

exit 0
EOF

mkdir -p ${dir}/etc/first-boot.d

cat > ${dir}/etc/first-boot.d/01-ssh <<EOF
#!/bin/bash

export DEBIAN_FRONTEND=noninteractive
dpkg-reconfigure openssh-server
EOF

chmod 755 ${dir}/etc/rc.local ${dir}/etc/first-boot.d/01-ssh
