dir="$1"
PACKAGES=

ORIG=$(cd $(dirname $0); pwd)

. $ORIG/common

# Configure OpenIB things
#

# sdpnetstat is not in Ubuntu Trusty yet.
if [ "$RELEASE" = "trusty" ]; then
    wget --no-verbose 'https://cs.stanford.edu/pub/mirrors/ubuntu/ubuntu/pool/universe/s/sdpnetstat/sdpnetstat_1.60-1ubuntu2_amd64.deb' -O ${dir}/tmp/sdpnetstat_1.60-1ubuntu2_amd64.deb
    do_chroot $dir dpkg -i /tmp/sdpnetstat_1.60-1ubuntu2_amd64.deb
    do_chroot $dir rm /tmp/sdpnetstat_1.60-1ubuntu2_amd64.deb
fi

# sdpnetstat and rds-tools are not in Debian Jessie yet.
if [ "$RELEASE" = "jessie" ]; then
    wget --no-verbose 'http://ftp.debian.org/debian/pool/main/s/sdpnetstat/sdpnetstat_1.60-1_amd64.deb' -O ${dir}/tmp/sdpnetstat.deb
    wget --no-verbose 'http://ftp.debian.org/debian/pool/main/r/rds-tools/rds-tools_1.4.1-OFED-1.4.2-1_amd64.deb' -O ${dir}/tmp/rds-tools.deb
    do_chroot $dir dpkg -i /tmp/sdpnetstat.deb /tmp/rds-tools.deb
    do_chroot $dir rm /tmp/sdpnetstat.deb /tmp/rds-tools.deb
fi

case "$(package_type)" in
    "deb")
        PACKAGES="infiniband-diags ibutils ibverbs-utils qlvnictools srptools sdpnetstat rds-tools rdmacm-utils perftest libmthca1 libmlx4-1 libipathverbs1"

        # Mellanox OpenIB configuration script for Debian based hosts
        mkdir -p ${dir}/etc/infiniband
        cat > ${dir}/etc/infiniband/openib.conf <<EOF
# Start HCA driver upon boot
ONBOOT=yes
# Load UCM module
UCM_LOAD=no
# Load RDMA_CM module
RDMA_CM_LOAD=yes
# Load RDMA_UCM module
RDMA_UCM_LOAD=yes
# Increase ib_mad thread priority
RENICE_IB_MAD=no
# Load MTHCA
# MTHCA_LOAD=yes
# Load MLX4 modules
MLX4_LOAD=yes
# Load MLX4_EN module
MLX4_EN_LOAD=yes
# Load CXGB3 modules
# CXGB3_LOAD=yes
# Load NES modules
# NES_LOAD=yes
# Load IPoIB
IPOIB_LOAD=yes
# Enable IPoIB Connected Mode
SET_IPOIB_CM=no
# Enable Tuning
RUN_SYSCTL=y
EOF

        # Mellanox OpenIB init script
        wget --no-verbose 'https://git.openfabrics.org/git?p=ofed_1_5/linux-2.6.git;a=blob_plain;f=ofed_scripts/openibd;h=4eab48c92292e9edbcc85abecd60558adad1e02d;hb=HEAD' -O ${dir}/etc/init.d/openibd
        chmod +x ${dir}/etc/init.d/openibd
        wget --no-verbose 'https://git.openfabrics.org/git?p=ofed_1_5/linux-2.6.git;a=blob_plain;f=ofed_scripts/sysctl_perf_tuning;h=a375c5600d63131a6d7657debeb299ed43f407ed;hb=HEAD' -O ${dir}/sbin/sysctl_perf_tuning
        chmod +x ${dir}/sbin/sysctl_perf_tuning
    ;;
    "rpm")
        PACKAGES="ibutils infiniband-diags ibacm libibcommon libibmad libibumad libibverbs libmlx4 libmthca rdma srptools"
    ;;
    *)
        fatal_error "$package_type is not supported in Infiniband configuration"
    ;;
 esac

install_packages $dir $PACKAGES
