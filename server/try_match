import json
import sys
import matcher

if len(sys.argv) != 3:
    print "try_match help"
    print "=============="
    print
    print "try_match expect exactly two arguments on the command line."
    print
    print "The first parameter shall be the .hw file"
    print "     generated by detect.py and uploaded to edeploy server"
    print
    print "The second parameter shall be the spec file"
    print "     located in the config/ directory with a .spec extension"
    print
    print "try_match <hw_file> <spec_file>"
    sys.exit(1)

hw_items = json.loads(open(sys.argv[1], 'r').read(-1))
specs = eval(open(sys.argv[2], 'r').read(-1))

var = {}
var2 = {}

if matcher.match_all(hw_items, specs, var, var2, debug=True):
    print var
else:
    print False
    sys.exit(1)
